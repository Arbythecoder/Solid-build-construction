# ========================================
# AFODAMS PROPERTY - PRODUCTION ENVIRONMENT
# ========================================

# Database - MongoDB Atlas (REQUIRED)
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/your_database?retryWrites=true&w=majority

# Authentication (REQUIRED)
JWT_SECRET=your_jwt_secret_here_use_64_character_random_string_from_crypto
AUTH_ROLES=["Admin","Landlord","Tenant","Investor","Agent"]
ADMIN_EMAIL=afodamsproperty@gmail.com
PASSWORD_RESET_EXPIRY=3600

# Server Configuration
NODE_ENV=production
PORT=5000

# CORS - Update with your actual domain
CORS_ORIGIN=https://your-domain.com

# File Storage - Cloudinary (Get from cloudinary.com)
CLOUDINARY_CLOUD_NAME=afodamsproperty
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_secret_here

# Payments - Paystack (Get from paystack.com)
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key

# Email - SendGrid (Get from sendgrid.com)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

